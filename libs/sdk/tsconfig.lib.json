{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "outDir": "./out-tsc/lib",
    "declaration": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
