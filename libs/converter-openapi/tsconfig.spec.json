{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "module": "commonjs",
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "test/**/*.spec.ts"
  ]
}
